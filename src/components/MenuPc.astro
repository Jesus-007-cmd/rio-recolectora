---
const menuItems = [
  { title: "Acerca de", url: "/#about" }, 
  { title: "Servicios", url: "/#services" },
  { title: "Operaciones", url: "/#operations" },
  { title: "¿Por qué elegirnos?", url: "/#why-choose-us" },
  { title: "Testimonios", url: "/#testimonials" },
  { title: "Clientes", url: "/#clients" }
];

---


<head>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>

<!-- Menú de escritorio (se muestra solo en pantallas grandes) -->
<div class="menubar-container d-none d-lg-block">
  <div class="menubar">
    <span class="menu-label">Menú</span>
    <div class="menu-content">
      {menuItems.map((item) => (
        <a class="menu-item btn btn-light" href={item.url}>{item.title}</a>
      ))}
    </div>
  </div>
</div>

<script is:inline>
document.addEventListener("DOMContentLoaded", function () {
  const menubar = document.querySelector(".menubar");

  // Controlar el menú flotante en escritorio
  if (menubar) {
    menubar.addEventListener("mouseenter", () => {
      menubar.classList.add("expanded");
    });
    menubar.addEventListener("mouseleave", () => {
      menubar.classList.remove("expanded");
    });
  }
});
</script>

<style>
/* ----- MENÚ FLOTANTE PARA ESCRITORIO ----- */
@media (min-width: 769px) {
  .menubar-container {
    position: fixed;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    z-index: 1000;
  }

  .menubar {
    border-radius: 50px;
    background: white;
    border: 2px solid rgba(198, 40, 40, 0.2);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
    padding: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 90px;
    height: 90px;
    overflow: hidden;
    color: #c62828;
    transition: width 0.3s ease-in-out, padding 0.3s ease-in-out;
    position: relative;
  }

  .menubar.expanded {
    width: 900px;
    height: 90px;
    padding: 10px 20px;
    justify-content: flex-start;
  }

  .menu-label {
    font-size: 16px;
    font-weight: bold;
    text-align: center;
    position: absolute;
    transition: opacity 0s ease-in-out 0.5s;
  }

  .menubar.expanded .menu-label {
    opacity: 0;
    transition: opacity 0.3s ease-in-out;
  }

  .menu-content {
    display: flex;
    gap: 15px;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.3s ease-in-out 0.3s, visibility 0.3s ease-in-out 0.3s;
    margin-left: 15px;
    align-items: center;
  }

  .menubar.expanded .menu-content {
    opacity: 1;
    visibility: visible;
  }

  .menu-item {
    text-decoration: none;
    color: #fff;
    font-weight: bold;
    text-align: center;
    padding: 10px 15px;
    border-radius: 10px;
    background: linear-gradient(135deg, #b71c1c, #c62828);
    transition: background 0.3s, transform 0.2s, box-shadow 0.3s ease-in-out;
    display: flex;
    align-items: center;
    justify-content: center;
    min-width: 120px;
    height: 50px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  .menu-item:hover {
    background: linear-gradient(135deg, #9a0007, #b71c1c);
    transform: scale(1.1);
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
  }
}
</style>
