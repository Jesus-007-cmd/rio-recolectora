<!-- Menú de móvil (solo visible en pantallas pequeñas) -->
<div class="mobile-menu-container">
  <button class="hamburger-menu" id="hamburger-button">☰</button>
  <div class="mobile-menu" id="mobile-menu">
    <a class="mobile-menu-item" href="#about">Acerca de</a>
    <div class="mobile-menu-item">
      <a href="#services">Servicios</a>
      <!-- Submenú de Servicios -->
      <div class="submenu">
        <a href="#web-design">Diseño web</a>
        <a href="#seo">SEO</a>
        <a href="#marketing">Marketing</a>
      </div>
    </div>
    <a class="mobile-menu-item" href="#operations">Operaciones</a>
    <a class="mobile-menu-item" href="#why-choose-us">¿Por qué elegirnos?</a>
    <a class="mobile-menu-item" href="#testimonials">Testimonios</a>
    <a class="mobile-menu-item" href="#clients">Clientes</a>
  </div>
</div>

<script>
  // Espera que el contenido de la página esté cargado
  document.addEventListener("DOMContentLoaded", function () {
    const hamburgerButton = document.getElementById("hamburger-button");
    const mobileMenu = document.getElementById("mobile-menu");

    // Verifica si el botón de hamburguesa y el menú existen
    if (hamburgerButton && mobileMenu) {
      hamburgerButton.addEventListener("click", function () {
        // Muestra u oculta el menú móvil al hacer clic
        mobileMenu.classList.toggle("open");
      });
    }

    // Agrega eventos para submenús
    const menuItems = document.querySelectorAll('.mobile-menu-item > a');

    menuItems.forEach(item => {
      item.addEventListener('click', function (event) {
        const submenu = this.nextElementSibling;

        // Verifica si el siguiente elemento es un submenú
        if (submenu && submenu.classList.contains('submenu')) {
          event.preventDefault(); // Evita que el enlace se active
          submenu.classList.toggle('open');
        }
      });
    });
  });
</script>

<style>
  /* Estilos solo para dispositivos móviles */
  @media (max-width: 768px) {
    .mobile-menu-container {
      position: fixed;
      bottom: 20px;
      right: 20px;
      z-index: 1000;
    }

    .hamburger-menu {
      width: 60px;
      height: 60px;
      background: linear-gradient(135deg, #c62828, #d32f2f);
      border: none;
      border-radius: 50%;
      color: white;
      font-size: 32px;
      font-weight: bold;
      text-align: center;
      cursor: pointer;
      display: flex;
      justify-content: center;
      align-items: center;
      padding: 0;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    .mobile-menu {
      display: none;
      position: absolute;
      bottom: 70px;
      right: 0;
      background: white;
      border-radius: 10px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
      padding: 10px;
      min-width: 180px;
    }

    .mobile-menu.open {
      display: block;
    }

    .mobile-menu-item {
      display: block;
      padding: 10px 15px;
      text-decoration: none;
      color: #c62828;
      font-weight: bold;
    }

    .mobile-menu-item:hover {
      background: #f5f5f5;
    }

    .submenu {
      display: none;
      padding-left: 20px;
    }

    .submenu.open {
      display: block;
    }

    .submenu a {
      display: block;
      padding: 8px 0;
      text-decoration: none;
      color: #333;
    }

    .submenu a:hover {
      background: #f5f5f5;
    }
  }
</style>
