---

<head>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>


<!-- Menú de escritorio (se muestra solo en pantallas grandes) -->
<div class="menubar-container d-none d-lg-block">
  <div class="menubar">
    <span class="menu-label">Menú</span>
    <div class="menu-content">
      {menuItems.map((item) => (
        <a class="menu-item btn btn-light" href={item.url}>{item.title}</a>
      ))}
    </div>
  </div>
</div>

<!-- Menú de móvil (se muestra solo en pantallas pequeñas) -->
<div class="mobile-menu-container d-lg-none">

  <button class="hamburger-menu" id="hamburger-button">☰</button>
  <div class="mobile-menu" id="mobile-menu">
    {menuItems.map((item) => (
      <a class="mobile-menu-item" href={item.url}>{item.title}</a>
    ))}
  </div>
</div>



<script is:inline>
document.addEventListener("DOMContentLoaded", function () {
  const menubar = document.querySelector(".menubar");
  const hamburgerButton = document.getElementById("hamburger-button");
  const mobileMenu = document.getElementById("mobile-menu");

  // Controlar el menú flotante en escritorio
  if (menubar) {
    menubar.addEventListener("mouseenter", () => {
      menubar.classList.add("expanded");
    });
    menubar.addEventListener("mouseleave", () => {
      menubar.classList.remove("expanded");
    });
  }

  // Controlar el menú hamburguesa en móvil
  if (hamburgerButton && mobileMenu) {
    hamburgerButton.addEventListener("click",  () => {
      mobileMenu.classList.toggle("open");
      
    });
  }
});
</script>

<style>
/* ----- MENÚ FLOTANTE PARA ESCRITORIO ----- */
@media (min-width: 769px) {
  .menubar-container {
    position: fixed;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    z-index: 1000;
  }

  .menubar {
  border-radius: 50px;
  background: white;
  border: 2px solid rgba(198, 40, 40, 0.2);
  box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
  padding: 10px;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 90px;
  height: 90px;
  overflow: hidden;
  color: #c62828;
  transition: width 0.3s ease-in-out, padding 0.3s ease-in-out;
  position: relative;
}

.menubar.expanded {
  width: 900px;
  height: 90px;
  padding: 10px 20px;
  justify-content: flex-start;
}
.menu-label {
  font-size: 16px;
  font-weight: bold;
  text-align: center;
  position: absolute;
  transition: opacity 0s ease-in-out 0.5s; /* Se oculta rápido, reaparece con retraso */
}

.menubar.expanded .menu-label {
  opacity: 0;
  transition: opacity 0.3s ease-in-out; /* Se oculta inmediatamente al expandirse */
}



  .menu-content {
  display: flex;
  gap: 15px;
  opacity: 0;
  visibility: hidden;
  transition: opacity 0.3s ease-in-out 0.3s, visibility 0.3s ease-in-out 0.3s;
  margin-left: 15px;
  align-items: center;
}

.menubar.expanded .menu-content {
  opacity: 1;
  visibility: visible;
}
  

  .menu-item {
    text-decoration: none;
    color: #fff;
    font-weight: bold;
    text-align: center;
    padding: 10px 15px;
    border-radius: 10px;
    background: linear-gradient(135deg, #b71c1c, #c62828);
    transition: background 0.3s, transform 0.2s, box-shadow 0.3s ease-in-out;
    display: flex;
    align-items: center;
    justify-content: center;
    min-width: 120px;
    height: 50px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  .menu-item:hover {
    background: linear-gradient(135deg, #9a0007, #b71c1c);
    transform: scale(1.1);
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
  }
}

/* ----- MENÚ HAMBURGUESA PARA MÓVIL ----- */
@media (max-width: 768px) {
  .mobile-menu-container {
    position: fixed;
    bottom: 20px;
    right: 20px;
    z-index: 1000;
  }
.hamburger-menu {
  width: 60px;
  height: 60px;
  background: linear-gradient(135deg, #c62828, #d32f2f);
  border: none;
  border-radius: 50%;
  color: white;
  font-size: 32px;
  font-weight: bold;
  text-align: center;
  cursor: pointer;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
  
  /* Agregar display flex para centrar las tres líneas */
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0;
}

.hamburger-menu::before, .hamburger-menu::after {
  content: "";
  width: 30px;
  height: 4px;
  background-color: white;
  position: absolute;
}

.hamburger-menu::before {
  top: 18px;  /* Ajusta la posición de la primera línea */
}

.hamburger-menu::after {
  bottom: 18px;  /* Ajusta la posición de la tercera línea */
}

  .mobile-menu {
    display: none;
    position: absolute;
    bottom: 70px;
    right: 0;
    background: white;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    padding: 10px;
    min-width: 180px;
  }

  .mobile-menu.open {
    display: block !important; /* Asegúrate de que se muestre */
}

  .mobile-menu-item {
    display: block;
    padding: 10px 15px;
    text-decoration: none;
    color: #c62828;
    font-weight: bold;
  }

  .mobile-menu-item:hover {
    background: #f5f5f5;
  }
}
</style>
