---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import MenuBar from '../components/menubar.astro';
import '../styles/global.css'; // ✅ Importación correcta del CSS global en Astro
import AboutSection from '../screens/home/AboutSection.astro';
import Welcome from '../screens/home/Welcome.astro';
import ServicesOverview from '../screens/home/ServicesOverview.astro';
import WhyChooseUs from '../screens/home/WhyChooseUs.astro';
import OperationsHighlight from '../screens/home/OperationsHighlight.astro';
import Testimonials from '../screens/home/Testimonials.astro';
import ClientsOrPartners from '../screens/home/ClientsOrPartners.astro';
import TextMarquee from '../screens/home/TextMarquee.astro';
import AlertContainer from '../screens/home/Alert-Container.astro';
---

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>RIO RECOLECTORA</title>
  
  <!-- Bootstrap (desde CDN) -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>

  <Header />
 
  <Welcome  />
 <section class="flex justify-between gap-6 p-6">
  <!-- Componente a la izquierda -->
  <div class="flex-1 flex justify-center items-center">
    <div class="relative w-full max-w-xl p-4 bg-red-500 text-white rounded-3xl shadow-xl">
      <!-- Marquee de texto -->
      <TextMarquee />
    </div>
  </div>

  <!-- Componente a la derecha -->
  <div class="flex-1 flex justify-center items-center">
    <div class="relative w-full max-w-xl p-6 bg-yellow-400 text-dark rounded-3xl shadow-xl">
      <!-- Cuidado antes de contratar -->
      <AlertContainer client:visible />
    </div>
  </div>
</section>

<style>
  /* Ajustes para un mayor espaciado y alineación */
  .flex {
    display: flex;
  }

  .justify-center {
    justify-content: center;
  }

  .items-center {
    align-items: center;
  }

  /* Aumentar el espacio entre los componentes */
  .gap-6 {
    gap: 1.5rem;
  }

  .max-w-xl {
    max-width: 700px;
  }

  /* Sombras más suaves y bordes más redondeados */
  .rounded-3xl {
    border-radius: 1.5rem;
  }

  .shadow-xl {
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  }

  /* Ajuste de tamaño del componente de alerta */
  .p-6 {
    padding: 1.5rem;
  }
</style>





  <AboutSection />
  <ServicesOverview />
  <OperationsHighlight />
  <WhyChooseUs />
  <Testimonials />
  <ClientsOrPartners />
  
<MenuBar />
  <Footer />

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

