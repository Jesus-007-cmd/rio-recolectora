---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import MenuMovil from '../components/MenuMovil.astro';
import '../styles/global.css'; // ✅ Importación correcta del CSS global en Astro
import AboutSection from '../screens/home/AboutSection.astro';
import Welcome from '../screens/home/Welcome.astro';
import ServicesOverview from '../screens/home/ServicesOverview.astro';
import WhyChooseUs from '../screens/home/WhyChooseUs.astro';
import OperationsHighlight from '../screens/home/OperationsHighlight.astro';
import Testimonials from '../screens/home/Testimonials.astro';
import ClientsOrPartners from '../screens/home/ClientsOrPartners.astro';
import TextMarquee from '../screens/home/TextMarquee.astro';
import AlertContainer from '../screens/home/Alert-Container.astro';
---

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>RIO RECOLECTORA</title>
  
  <!-- Bootstrap (desde CDN) -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>

  <Header />
 
  <Welcome  />
<section class="flex flex-col sm:flex-row justify-between gap-4 p-5">
  <!-- Componente a la izquierda -->
  <div class="flex-1">
    <TextMarquee />
  </div>

  <!-- Componente a la derecha -->
  <div class="flex-1">
    <AlertContainer  />
  </div>
</section>




  <AboutSection />
  <ServicesOverview />
  <OperationsHighlight />
  <WhyChooseUs />
  <Testimonials />
  <ClientsOrPartners />
  
<MenuMovil />
  <Footer />

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

