---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import MenuMovil from '../components/MenuMovil.astro';
import MenuPc from '../components/MenuPc.astro'; 
import '../styles/global.css'; // ✅ Importación correcta del CSS global en Astro
import CompanyOverview from '../screens/home/CompanyOverview.astro';
import Welcome from '../screens/home/Welcome.astro';
import WhyChooseUs from '../screens/home/WhyChooseUs.astro';
import OperationsHighlight from '../screens/home/OperationsHighlight.astro';
import Testimonials from '../screens/home/Testimonials.astro';
import ClientsOrPartners from '../screens/home/ClientsOrPartners.astro';
import TextMarquee from '../screens/home/TextMarquee.astro';
import AlertContainer from '../screens/home/Alert-Container.astro';
import Recolection from '../screens/home/Recolection.astro';
import OurServices from '../screens/home/OurServices.astro';

---

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>RIO RECOLECTORA</title>
  
  <!-- Bootstrap (desde CDN) -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>

  <!-- ✅ Solo mostrar en PC -->
<div class="hidden md:block">
  <MenuPc />
</div>

<!-- ✅ Solo mostrar en móviles -->
<div class="block md:hidden">
  <MenuMovil />
</div>

  
  <Welcome  />
  <TextMarquee />
  
<section class="flex flex-col sm:flex-row justify-center gap-4 px-4 py-4 max-w-7xl mx-auto">
  <!-- Componente a la izquierda -->
  <div class="flex-1 flex flex-col items-center justify-center space-y-4 max-w-lg">
    <AlertContainer />
    <Recolection />
  </div>

  <!-- Componente a la derecha -->
  <div class="flex-1 flex justify-center items-center">
    <!-- Imagen (Nota de Facebook) -->
    <div class="w-full sm:w-[80%] lg:w-[60%]">
      <img src="/images/notafacebook.jpeg" alt="Nota de Facebook" class="w-full rounded-xl shadow-xl" />
    </div>
  </div>
</section>

  <CompanyOverview />
  <OurServices />
  <OperationsHighlight />
  <WhyChooseUs />
  <Testimonials />
  <ClientsOrPartners />
  

  <Footer />

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

