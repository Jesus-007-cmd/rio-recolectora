<!-- Animaciones con AOS -->
<script client:load>
  document.addEventListener("DOMContentLoaded", function() {
    setTimeout(() => {
      if (typeof AOS !== "undefined") {
        AOS.init({ duration: 1000 });
        console.log("✅ AOS cargado y funcionando correctamente.");
      } else {
        console.error("❌ AOS sigue sin estar disponible.");
      }
    }, 500);
  });

  // ✅ Animación de onda en canvas (grises y más lentas)
  window.onload = function() {
    const canvas = document.getElementById('waveCanvas');
    const ctx = canvas.getContext('2d');

    function resizeCanvas() {
      canvas.width = 400; // Se ajusta tamaño más grande
      canvas.height = 180;
    }

    resizeCanvas();
    window.addEventListener('resize', resizeCanvas);

    const waves = [];
    const waveCount = 5; // Número de ondas
    const waveHeight = 30; // Amplitud de la onda
    const waveSpeed = 0.0005; // Movimiento más lento

    for (let i = 0; i < waveCount; i++) {
      waves.push({
        frequency: 0.02,
        phase: Math.PI * i / waveCount,
        direction: i % 2 === 0 ? 1 : -1, // Alterna direcciones
      });
    }

    function animate(time) {
      ctx.clearRect(0, 0, canvas.width, canvas.height);

      waves.forEach((wave, index) => {
        ctx.beginPath();
        for (let x = 0; x < canvas.width; x++) {
          const y = canvas.height / 2 +
                    Math.sin(x * wave.frequency + time * waveSpeed * wave.direction + wave.phase) * waveHeight;
          if (x === 0) ctx.moveTo(x, y);
          else ctx.lineTo(x, y);
        }
        ctx.strokeStyle = "rgba(100, 100, 100, 0.7)"; // Color gris
        ctx.lineWidth = 2;
        ctx.stroke();
      });

      requestAnimationFrame(animate);
    }

    animate(0);
  };
</script>

