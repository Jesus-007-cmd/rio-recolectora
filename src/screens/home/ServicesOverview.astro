---
const services = [
  { title: "Recolección de Residuos Peligrosos", icon: "bi-trash", description: "Manejo especializado para residuos peligrosos con cumplimiento de normativas ambientales." },
  { title: "Recolección de Residuos Industriales", icon: "bi-recycle", description: "Soluciones para la disposición adecuada de residuos industriales." },
  { title: "Transporte de Residuos", icon: "bi-truck", description: "Servicio de transporte seguro y certificado para la recolección de residuos." },
  { title: "Asesoría Ambiental", icon: "bi-globe", description: "Consultoría para el manejo responsable de residuos y cumplimiento normativo." }
];
---

<section class="py-5">
  <div class="container text-center">
    <h2 class="fw-bold text-primary mb-4">Nuestros Servicios</h2>
    <div class="row">
      {services.map((service) => (
        <div class="col-md-6 col-lg-3 mb-4">
          <div class="card shadow-sm border-0">
            <div class="card-body">
              <i class={`bi ${service.icon} display-4 text-success`}></i>
              <h5 class="fw-bold mt-3">{service.title}</h5>
              <p class="text-muted">{service.description}</p>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
