---
const benefits = [
  { title: "Experiencia y Confianza", icon: "bi-award", description: "Más de 10 años en el sector garantizando un servicio de calidad." },
  { title: "Cumplimiento Ambiental", icon: "bi-shield-check", description: "Operamos bajo estrictas normas ambientales y de seguridad." },
  { title: "Flota Propia", icon: "bi-truck", description: "Disponemos de transporte especializado para recolección y disposición." },
  { title: "Atención Personalizada", icon: "bi-person-check", description: "Soluciones a la medida de las necesidades de cada cliente." }
];
---
<section class="py-5" style="background: #f8f9fa;">
  <div class="container text-center">
    <!-- Título con efecto de brillo -->
    <h2 class="fw-bold text-danger mb-4 title-glow">¿Por qué elegirnos?</h2>
    <div class="row">
      {benefits.map((benefit) => (
        <div class="col-md-6 col-lg-3 mb-4 d-flex align-items-stretch">
          <div class="card shadow-lg border-0 benefit-card w-100">
            <div class="card-body text-center d-flex flex-column">
              <i class={`bi ${benefit.icon} display-4 benefit-icon`}></i>
              <h5 class="fw-bold mt-3 text-dark">{benefit.title}</h5>
              <p class="text-muted flex-grow-1">{benefit.description}</p>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
/* ✅ Efecto de brillo en el título */
.title-glow {
  text-shadow: 0px 0px 10px rgba(255, 255, 255, 0.8);
}

/* ✅ Diseño personalizado de tarjetas */
.benefit-card {
  background: linear-gradient(145deg, #ffffff, #f8f9fa);
  border-radius: 15px;
  overflow: hidden;
  transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
  padding: 20px;
  display: flex;
  flex-direction: column;
  height: 100%;
}

/* ✅ Sombra y efecto hover en tarjetas */
.benefit-card:hover {
  transform: scale(1.05);
  box-shadow: 0px 8px 16px rgba(0, 0, 0, 0.1);
}

/* ✅ Iconos con mejor diseño */
.benefit-icon {
  color: #d5112d;
  text-shadow: 2px 2px 8px rgba(255, 0, 0, 0.3);
}
</style>