---
const clients = [
  { name: "Ford", logoUrl: "/images/logos-clientes/Ford-logo.jpg" },
  { name: "Universidad de Guadalajara", logoUrl: "/images/logos-clientes/Logo_UDG.jpeg" },
  { name: "Dulces de la Rosa", logoUrl:  "/images/logos-clientes/dulces-de-la-rosa_marca.png" },
  { name: "Sabritas", logoUrl: "/images/logos-clientes/logo-sabritas.png" },
  { name: "Farmacias Guadalajara", logoUrl: "/images/logos-clientes/farmacias-guadalajara.jpg" },
  { name: "BASF", logoUrl: "/images/logos-clientes/BASF-logo.png" },
  { name: "Pemex", logoUrl: "/images/logos-clientes/pemex-logo.jpg" },
  { name: "CFE", logoUrl: "/images/logos-clientes/Logo-CFE-1.png" },
  { name: "Banco de México", logoUrl: "/images/logos-clientes/Banco_de_mexico_logo.png" },
  { name: "Axtel", logoUrl: "/images/logos-clientes/tn_logo_axtel_viejo.png" },
  { name: "Aceros Murillo", logoUrl: "/images/logos-clientes/aceros-murillo-sa-de-cv-logo.jpg" },
  { name: "Universidad Autonoma de Guadalajara", logoUrl: "/images/logos-clientes/UAG-LOGO.jpg" },
  { name: "VANTEX", logoUrl: "/images/logos-clientes/vantex-logo.jpg" },
  { name: "Disco Roller", logoUrl: "/images/logos-clientes/disco-roller-logo.jpg" },
  { name: "Cablevision", logoUrl: "/images/logos-clientes/cablevision-logo.jpg" }
];

---

<section id="clients" class="py-5" style="background: #f8f9fa;">
  <div class="container text-center">
    <!-- Título con efecto de brillo -->
    <h2 class="fw-bold text-danger mb-4 title-glow">Nuestros Clientes</h2>
    
    <!-- Carrusel de logos en movimiento hacia la izquierda -->
    <div class="logos-container">
      <div class="logos-slide left">
        {clients.concat(clients).concat(clients).map((client, index) => (
          <div class="logo-item" key={`left-${index}`}> 
            <img src={client.logoUrl} alt={`Logo de ${client.name}`} class="img-fluid client-logo" />
          </div>
        ))}
      </div>
    </div>

    <!-- Carrusel de logos en movimiento hacia la derecha -->
    <div class="logos-container">
      <div class="logos-slide right">
        {clients.concat(clients).concat(clients).map((client, index) => (
          <div class="logo-item" key={`right-${index}`}> 
            <img src={client.logoUrl} alt={`Logo de ${client.name}`} class="img-fluid client-logo" />
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
/* ✅ Efecto de brillo en el título */
.title-glow {
  text-shadow: 0px 0px 10px rgba(255, 255, 255, 0.8);
}

/* ✅ Contenedor del carrusel */
.logos-container {
  overflow: hidden;
  white-space: nowrap;
  position: relative;
  width: 100%;
  padding: 20px 0;
  background: #f8f9fa;
  margin-bottom: 20px;
}

/* ✅ Línea de logos en movimiento (izquierda) */
.logos-slide.left {
  display: flex;
  gap: 40px;
  animation: scroll-left 15s linear infinite;
  width: max-content;
}

/* ✅ Línea de logos en movimiento (derecha) */
.logos-slide.right {
  display: flex;
  gap: 40px;
  animation: scroll-right 15s linear infinite;
  width: max-content;
}

/* ✅ Cada logo */
.logo-item {
  flex: 0 0 auto;
  width: 150px;
  height: auto;
  display: flex;
  align-items: center;
  justify-content: center;
}

.client-logo {
  max-width: 100%;
  height: auto;
  object-fit: contain;
  filter: drop-shadow(2px 2px 5px rgba(0, 0, 0, 0.1));
}

/* ✅ Animación de desplazamiento hacia la izquierda con reinicio continuo */
@keyframes scroll-left {
  from { transform: translateX(0); }
  to { transform: translateX(-33.33%); }
}

/* ✅ Animación de desplazamiento hacia la derecha con reinicio continuo */
@keyframes scroll-right {
  from { transform: translateX(-33.33%); }
  to { transform: translateX(0); }
}
</style>
