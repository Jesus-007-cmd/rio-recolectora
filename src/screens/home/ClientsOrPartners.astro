---
const clients = [
  { name: "Ford", logoUrl: "https://www.ford.com.mx/content/ford/mx/es_mx/site-wide-content/billboard-carousels/homepage-carousel/jcr:content/par/billboard_1449001769/image.imgs.full.high.jpg" },
  { name: "Universidad de Guadalajara", logoUrl: "https://www.udg.mx/sites/default/files/identidad_corporativa/udg/logos/udg-escudo-color.png" },
  { name: "Dulces de la Rosa", logoUrl: "https://dulcesdelarosa.com.mx/sites/default/files/logo.png" },
  { name: "Sabritas", logoUrl: "https://www.sabritas.com.mx/themes/custom/sabritas/logo.png" },
  { name: "Farmacias Guadalajara", logoUrl: "https://www.farmaciasguadalajara.com.mx/assets/images/logo.png" },
  { name: "BASF", logoUrl: "https://www.basf.com/global/assets/logo.svg" },
  { name: "Pemex", logoUrl: "https://www.pemex.com/estaticos/imagenes/logotipo-pemex.svg" },
  { name: "CFE", logoUrl: "https://www.cfe.mx/assets/images/logo.png" },
  { name: "Banco de México", logoUrl: "https://www.banxico.org.mx/images/logo_banxico.svg" },
  { name: "Axtel", logoUrl: "https://www.axtelcorp.mx/sites/axtelcpo/files/axtel_logo.png" }
];

---

<section id="clients" class="py-5 bg-light">
  <div class="container text-center">
    <h2 class="fw-bold text-primary mb-4">Nuestros Clientes</h2>
    
    <!-- Carrusel de logos -->
    <div class="logos-container">
      <div class="logos-slide">
        {clients.concat(clients).map((client) => ( // Duplica los logos para el efecto infinito
          <div class="logo-item">
            <img src={client.logoUrl} alt={`Logo de ${client.name}`} class="img-fluid" />
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  /* Contenedor del carrusel */
  .logos-container {
    overflow: hidden;
    white-space: nowrap;
    position: relative;
    width: 100%;
    padding: 20px 0;
    background: #f9f9f9;
  }

  /* Línea de logos en movimiento */
  .logos-slide {
    display: flex;
    gap: 40px;
    animation: scroll 15s linear infinite;
  }

  /* Cada logo */
  .logo-item {
    flex: 0 0 auto;
    width: 150px;
    height: auto;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .logo-item img {
    max-width: 100%;
    height: auto;
    object-fit: contain;
  }

  /* Animación de desplazamiento */
  @keyframes scroll {
    from { transform: translateX(0); }
    to { transform: translateX(-50%); } /* Se mueve la mitad del bloque duplicado */
  }
</style>
